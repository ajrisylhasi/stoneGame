<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500.0" prefWidth="500.0" styleClass="borderpane" stylesheets="@../css/ui.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.StartController">
   <center>
      <VBox alignment="CENTER" maxHeight="150.0" prefHeight="150.0" prefWidth="500.0" styleClass="menu" stylesheets="@../css/ui.css">
         <children>
            <TextField fx:id="playerOneTF" alignment="CENTER" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="30.0" prefWidth="350.0" promptText="Player 1" styleClass="player-text-field" stylesheets="@../css/ui.css">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="15.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
               </padding>
            </TextField>
            <TextField fx:id="playerTwoTF" alignment="CENTER" layoutX="10.0" layoutY="98.0" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="350.0" promptText="Player 2" styleClass="player-text-field">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="15.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
               </padding>
            </TextField>
            <Label fx:id="missingPlayersLabel" />
            <Button fx:id="playBtn" mnemonicParsing="false" onAction="#handlePlayButton" prefHeight="30.0" prefWidth="120.0" styleClass="menu-button" stylesheets="@../css/ui.css" text="Play">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="40.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <top>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../images/logo.png" />
         </image>
         <BorderPane.margin>
            <Insets top="25.0" />
         </BorderPane.margin>
      </ImageView>
   </top>
</BorderPane>
